# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        $XDG_CACHE_HOME/msmtp/log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           daniel.henri.nunes@gmail.com
user           daniel.henri.nunes@gmail.com
passwordeval   "pass email/daniel.henri.nunes@gmail.com | tail -n 1"

# Set a default account
account default : gmail
