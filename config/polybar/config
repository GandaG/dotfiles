[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
alert = ${xrdb:color5:#222}

[bar/top]
height = 25
background = ${colors.background}
foreground = ${colors.foreground}
border-top-size = 10
border-bottom-size = 0
border-left-size = 10
border-right-size = 10
padding-right = 2
module-margin = 1
font-0 = mono:pixelsize=9;3
font-1 = Font Awesome 5 Free:style=Solid:size=9;2
font-2 = Font Awesome 5 Brands:style=Solid:size=9;2
modules-left = i3
modules-center = date
modules-right = vpn network volume battery powermenu

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}
label-focused = %name%
label-focused-foreground = ${self.label-mode-background}
label-focused-background = ${self.label-mode-foreground}
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-foreground = ${self.label-mode-foreground}
label-unfocused-background = ${self.label-mode-background}
label-unfocused-padding = 2
label-visible = %name%
label-visible-foreground = ${self.label-mode-foreground}
label-visible-background = ${self.label-mode-background}
label-visible-padding = 2
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/date]
type = custom/script
interval = 1
exec = date +" %a, %b %d   %H:%M"
click-left = st -e calcurse &

[module/vpn]
type = custom/script
interval = 1
exec = sh -c 'if [ "$(pgrep openvpn)" ]; then echo ""; else echo ""; fi'
click-left = sh -c 'if [ "$(pgrep openvpn)" ]; then windscribe disconnect; else windscribe connect US; fi'

[module/network]
type = custom/script
interval = 1
exec = ~/.config/polybar/network.sh
click-left = networkmanager_dmenu &

[module/volume]
type = internal/pulseaudio
format-volume = <ramp-volume>
label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100
format-charging = <animation-charging> <label-charging>
label-charging = "%percentage%%"
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = "%percentage%%"
format-full-prefix = " "
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
animation-charging-framerate = 500

[module/powermenu]
type = custom/text
content = 
click-left = ~/.config/polybar/power.sh

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
